FROM rust:1.82

# Install basic tools
RUN apt-get update && apt-get install -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy the project
COPY . .

# Run the specific failing test
CMD ["cargo", "test", "traits::nested::tests::nested_traits_detect_method", "--", "--nocapture"]
